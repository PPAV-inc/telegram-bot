{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "env": {
    "node": true
  },
  "rules": {
    "arrow-parens": "off",
    "import/prefer-default-export": "off",
    "indent": ["error", 2],
    "no-case-declarations": "off",
    "object-shorthand": "off",
    "no-await-in-loop": "off",
    "no-restricted-syntax": "off",
    "no-else-return": "off"
  },
  "plugins": [
    "babel"
  ]
}
