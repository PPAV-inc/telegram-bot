{
  "name": "telegram-bot",
  "version": "0.5.4",
  "private": false,
  "description": "PPAV Telegram Bot",
  "main": "app.js",
  "scripts": {
    "build": "NODE_ENV=production npm run clean && babel src --out-dir lib --ignore __tests__",
    "clean": "rimraf lib coverage",
    "dev": "NODE_ENV=development nodemon ./bin/bot.dev.js --watch src",
    "start": "yarn ;env NODE_ENV=production node ./bin/bot.js",
    "seed-setup": "./node_modules/.bin/seed-setup",
    "seed": "NODE_ENV=dev ./node_modules/.bin/seed",
    "precommit": "lint-staged",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint:fix && npm run testonly",
    "testonly": "NODE_ENV=test jest",
    "testonly:cov": "jest --coverage --runInBand --forceExit --no-cache",
    "testonly:watch": "jest --watch"
  },
  "keywords": [
    "PPAV",
    "telegram",
    "bot"
  ],
  "engines": {
    "node": ">=7"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-register": "^6.26.0",
    "botimize": "^1.0.2",
    "bottender": "^0.14.34",
    "dashbot": "^9.9.1",
    "date-fns": "^1.29.0",
    "dateformat": "^3.0.3",
    "elasticsearch": "^15.1.1",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "mongodb": "^2.2.30",
    "path": "^0.12.7",
    "unique-random-array": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.5",
    "babel-jest": "^23.4.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.1.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^0.14.3",
    "jest": "^23.4.0",
    "lint-staged": "^7.2.0",
    "node-mongo-seeds": "^3.1.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "testPathIgnorePatterns": [
      "node_modules/",
      "env/",
      "seeds/"
    ]
  }
}
