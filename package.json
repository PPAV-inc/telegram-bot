{
  "name": "telegram-bot",
  "version": "0.5.2",
  "private": false,
  "description": "PPAV Telegram Bot",
  "main": "app.js",
  "scripts": {
    "build": "NODE_ENV=production npm run clean && babel src --out-dir lib --ignore __tests__",
    "clean": "rimraf lib coverage",
    "dev": "NODE_ENV=development nodemon ./bin/bot.dev.js --watch src",
    "start": "yarn ;env NODE_ENV=production node ./bin/bot.js",
    "seed-setup": "./node_modules/.bin/seed-setup",
    "seed": "NODE_ENV=dev ./node_modules/.bin/seed",
    "precommit": "lint-staged",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint:fix && npm run testonly",
    "testonly": "NODE_ENV=test jest",
    "testonly:cov": "jest --coverage --runInBand --forceExit --no-cache",
    "testonly:watch": "jest --watch"
  },
  "keywords": [
    "PPAV",
    "telegram",
    "bot"
  ],
  "engines": {
    "node": ">=7"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-register": "^6.26.0",
    "botimize": "^1.0.2",
    "bottender": "^0.14.0-beta.1",
    "dashbot": "^9.2.0",
    "date-fns": "^1.29.0",
    "dateformat": "^2.0.0",
    "elasticsearch": "^13.3.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compress": "^2.0.0",
    "koa-logger": "^3.0.1",
    "koa-router": "^7.2.1",
    "mongodb": "^2.2.30",
    "path": "^0.12.7",
    "sleep-promise": "^2.0.0",
    "unique-random-array": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "eslint": "^4.1.1",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.3.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.1",
    "node-mongo-seeds": "^2.3.1",
    "nodemon": "^1.11.0",
    "prettier": "^1.7.0",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "testPathIgnorePatterns": [
      "node_modules/",
      "env/",
      "seeds/"
    ]
  }
}
