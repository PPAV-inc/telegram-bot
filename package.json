{
  "name": "telegram-bot",
  "version": "0.5.5",
  "private": false,
  "description": "PPAV Telegram Bot",
  "main": "app.js",
  "scripts": {
    "build": "NODE_ENV=production npm run clean && babel src --out-dir lib --ignore __tests__",
    "clean": "rimraf lib coverage",
    "dev": "NODE_ENV=development nodemon ./bin/bot.dev.js --watch src",
    "start": "yarn ;env NODE_ENV=production node ./bin/bot.js",
    "seed-setup": "./node_modules/.bin/seed-setup",
    "seed": "NODE_ENV=dev ./node_modules/.bin/seed",
    "precommit": "lint-staged",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint:fix && npm run testonly",
    "testonly": "NODE_ENV=test jest",
    "testonly:cov": "jest --coverage --runInBand --forceExit --no-cache",
    "testonly:watch": "jest --watch"
  },
  "keywords": [
    "PPAV",
    "telegram",
    "bot"
  ],
  "engines": {
    "node": ">=7"
  },
  "dependencies": {
    "@google/chatbase": "^1.1.2",
    "axios": "^0.21.0",
    "babel-register": "^6.26.0",
    "bottender": "^0.15.9",
    "date-fns": "^1.29.0",
    "dateformat": "^4.3.1",
    "elasticsearch": "^15.1.1",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^5.0.1",
    "koa-logger": "^3.2.0",
    "koa-router": "^10.0.0",
    "mongodb": "^2.2.30",
    "path": "^0.12.7",
    "unique-random-array": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^26.6.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "node-mongo-seeds": "^3.1.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "testPathIgnorePatterns": [
      "node_modules/",
      "env/",
      "seeds/"
    ]
  }
}
